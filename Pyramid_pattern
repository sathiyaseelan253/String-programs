public class Pattern  {
    public static void main(String[] args) {
        int row=4,n=1;
        for(int i=1;i<=row;i++) {
            for(int j=row-i;j>1;j--) {
                System.out.print(" ");
            }
            for(int k=1;k<=i;k++) {
                     System.out.print(n+" ");
                     n++;

            }
                 System.out.println("");

        }
    }
}
